{
  "name": "lml-v1-foundation-backend",
  "version": "1.0.0",
  "description": "LML v1 Foundation - Clean API Backend",
  "private": true,
  "scripts": {
    "dev": "next dev -p ${PORT:-3001}",
    "build": "next build",
    "start": "next start -p ${PORT:-3001}",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "migrate": "tsx scripts/run-migrations.ts",
    "dev:check": "tsx scripts/dev-check.ts",
    "dev:full": "pnpm run dev:check && pnpm run dev",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "test": "jest -c jest.config.cjs",
    "test:watch": "jest -c jest.config.cjs --watch",
    "test:ci": "jest -c jest.config.cjs --ci --coverage",
    "seed:test-data": "tsx scripts/seed-comprehensive-test-data.ts",
    "test:rendering-engine": "curl -s http://localhost:3000/api/v1/test-rendering-engine | jq",
    "test:booking-fsm": "curl -s -X POST http://localhost:3000/api/v1/test-booking-fsm -H 'Content-Type: application/json' -d '{}' | jq",
    "test:race-conditions": "curl -s -X POST http://localhost:3000/api/v1/test-race-conditions -H 'Content-Type: application/json' -d '{\"concurrentUsers\":10,\"scenario\":\"all\"}' | jq",
    "test:failure-modes": "curl -s -X POST http://localhost:3000/api/v1/test-failure-modes -H 'Content-Type: application/json' -d '{\"scenarios\":[\"all\"]}' | jq",
    "validate:enhanced": "tsx scripts/run-enhanced-validation.ts",
    "validate:full": "pnpm run seed:test-data && pnpm run validate:enhanced",
    "validate:delta": "tsx scripts/validate-delta.ts",
    "validate:delta:layouts": "tsx scripts/validate-delta.ts --layouts-only",
    "validate:delta:events": "tsx scripts/validate-delta.ts --events-only"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.29.0",
    "ioredis": "^5.3.0",
    "jose": "^6.0.12",
    "mongodb": "^6.0.0",
    "next": "^15.0.0",
    "node-fetch": "^3.3.0",
    "pg": "^8.11.0",
    "postgres": "^3.4.0",
    "rate-limiter-flexible": "^7.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "redis": "^5.7.0",
    "stripe": "^18.4.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.10.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "jest": "^29.0.0",
    "mongodb-memory-server": "^10.2.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}