# LML v1 Foundation - Environment Configuration Template
# ====================================================
# Copy this file to .env and fill in your actual values

# ================================================
# üåê APPLICATION SETTINGS  
# ================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3001

# ================================================
# üêò POSTGRESQL DATABASE (Local Docker)
# ================================================
DATABASE_URL=postgresql://lml_user:lml_secure_pass@localhost:5432/lastminutelive_clean

# ================================================
# üçÉ MONGODB DATABASE (Local Docker)
# ================================================
MONGODB_URI=mongodb://lml_app:lml_mongo_app_pass@localhost:27017/lml_seatmaps?authSource=lml_seatmaps
MONGODB_DB=lml_seatmaps

# ================================================
# üîÑ REDIS CACHE (Local Docker)
# ================================================
REDIS_URL=redis://:lml_redis_pass@localhost:6379

# ================================================
# üîê JWT AUTHENTICATION (Required)
# ================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_required_for_security
JWT_EXPIRES_IN=1h

# ================================================
# üõ°Ô∏è SECURITY & SESSION MANAGEMENT (Optional)
# ================================================
# Redis connection for session storage and token blacklist
SESSION_REDIS_URL=redis://:lml_redis_pass@localhost:6380

# Webhook URL for security violation alerts
SECURITY_WEBHOOK_URL=https://your-security-webhook-endpoint.com/alerts

# ================================================
# üí≥ STRIPE CONFIGURATION (Development)
# ================================================
# Get these from your Stripe dashboard
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ================================================
# üîê AUTHENTICATION
# ================================================
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# ================================================
# üìß EMAIL CONFIGURATION (Optional - for notifications)
# ================================================
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@yourdomain.com

# ================================================
# üõ†Ô∏è DEVELOPMENT TOOLS
# ================================================
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT=false

# ================================================
# üì± MOBILE APP CONFIGURATION
# ================================================
NEXT_PUBLIC_MOBILE_API_URL=http://localhost:3001

# ================================================
# üéØ API VERSIONING
# ================================================
API_VERSION=v1
API_PREFIX=/api/v1

# ================================================
# üîç LOGGING & MONITORING
# ================================================
LOG_LEVEL=debug
ENABLE_SQL_LOGGING=true
ENABLE_API_LOGGING=true